{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "name": "Event"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "detail": {
      "type": "string",
      "required": true
    },
    "location": {
      "type": "string",
      "required": true
    },
    "date": {
      "type": "datetime"
    },
    "host": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "hostedEvents"
    },
    "attendances": {
      "via": "event",
      "collection": "attendance"
    }
  }
}
